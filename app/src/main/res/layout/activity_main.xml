<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </WebView>

    <ImageButton
        android:id="@+id/leftButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="1dp"

        android:layout_marginBottom="80dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/left" />

    <ImageButton
        android:id="@+id/rightButton"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginStart="160dp"
        android:layout_marginBottom="80dp"
        android:background="#00000000"
        android:rotation="180"
        android:scaleType="fitCenter"
        android:src="@drawable/left"
        app:layout_constraintBottom_toBottomOf="@+id/webView"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/left" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginStart="80dp"
        android:background="#00000000"
        android:rotation="270"
        android:scaleType="fitCenter"
        android:src="@drawable/left"
        app:layout_constraintBottom_toBottomOf="@+id/webView"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/left" />

    <ImageButton
        android:id="@+id/forButton"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginStart="80dp"
        android:layout_marginBottom="160dp"
        android:adjustViewBounds="false"
        android:background="#00000000"
        android:rotation="90"
        android:scaleType="fitCenter"
        android:src="@drawable/left"
        app:layout_constraintBottom_toBottomOf="@+id/webView"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/left" />

    <ImageButton
        android:id="@+id/srvUpButton"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginEnd="80dp"
        android:layout_marginBottom="160dp"
        android:background="#00000000"
        android:rotation="90"
        android:scaleType="fitCenter"
        android:src="@drawable/right"
        app:layout_constraintBottom_toBottomOf="@+id/webView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/right" />

    <ImageButton
        android:id="@+id/srvLeftButton"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginEnd="160dp"
        android:layout_marginBottom="80dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/right" />

    <ImageButton
        android:id="@+id/srvRightButton"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginBottom="80dp"
        android:background="#00000000"
        android:rotation="180"
        android:scaleType="fitCenter"
        android:src="@drawable/right"
        app:layout_constraintBottom_toBottomOf="@+id/webView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/right" />

    <ImageButton
        android:id="@+id/srvDownButton"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginEnd="80dp"
        android:background="#00000000"
        android:rotation="270"
        android:scaleType="fitCenter"
        android:src="@drawable/right"
        app:layout_constraintBottom_toBottomOf="@+id/webView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/right" />

    <Button
        android:id="@+id/srvInitButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/roundbutton"
        android:text="居中"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Switch
        android:id="@+id/camSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>